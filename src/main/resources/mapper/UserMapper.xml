<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board1.service.UserService">

    <insert id="createUser" parameterType="UserDTO">
        INSERT INTO users (username, email, passwordhash, createdat)
        VALUES (#{username}, #{email}, SHA2(#{passwordHash},256), #{createdAt})
    </insert>
    <select id="getMemberOne" parameterType="int" resultType="MemberDTO">
        SELECT * FROM member WHERE num = #{num};

    </select>

    <delete id="deleteMemberOne">
        DELETE FROM member WHERE id = #{id}
    </delete>

    <select id="getMemberAll" parameterType="int" resultType="MemberDTO">
        SELECT * FROM member order by id DESC ;

    </select>
</mapper>

